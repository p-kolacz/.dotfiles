#!/bin/sh

REGEX=" connected (primary )?[0-9]+" 

case $1 in
	count)
		xrandr --current | grep -E --count "$REGEX" ;;
		# xrandr --current --listmonitors | head -n 1 | cut -d" " -f2	;;
	list)
		xrandr --current | grep -E "$REGEX" | cut -d" " -f1 ;;
		# xrandr --current --listmonitors | tail -n +2 | cut -d" " -f6 ;;
	primary)
		xrandr --current | grep -E "primary" | cut -d" " -f1 ;;
	secondary)
		xrandr --current | grep -E " connected [0-9]+" | cut -d" " -f1 ;;
	*)
		echo "Usage: monitor [count|list|primary|secondary]"
esac

