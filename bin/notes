#!/bin/bash

notes() {
	# find ~/Cloud/Exocortex/Notes -name "*.md" | fzf --preview "pygmentize {}"
	# find . -name "*.md" | fzf --layout reverse --height 30% --preview "pygmentize -l md {}"
	# find . -name "*.md" | fzf --layout reverse --height 40% --preview "highlight -O xterm256 -s moria {}"

	cd ~/Cloud/Exocortex/Notes
	local file
	file=$(find . -name "*.md" -type f | fzf --preview "highlight -O xterm256 -s moria {}")
	[[ -z "$file" ]] || vim "$file"
}

notes
