#!/bin/bash

function usage() {
	echo "Usage: [orph|remorph|up|sync|lastup|set-mirrors|clear]"
}

case $1 in
	orph)        pacman -Qdt ;;
	remorph)     pacman -Rs $(pacman -Qqdt) ;;
	up)          pacman -Syu ;;
	sync)        pacman -Sy ;;
	lastup)      grep "starting full system upgrade" /var/log/pacman.log | tail ;;
	set-mirrors) reflector --latest 5 --sort rate --save /etc/pacman.d/mirrorlist ;;
	clear)       pacman -Sc ;;	# clear cache
	*) usage
esac

