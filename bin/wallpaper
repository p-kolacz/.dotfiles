#!/bin/bash

FILE="$HOME/.cache/wallpaper"

browse() {
	# recursive thumbnail fullscreen
	$IMGVIEWER -rtf ~/Cloud/Images/Wallpapers &
}

setwp() {
	[[ -f $1 ]] || { echo "Invalid file: $1"; exit ; }
	cp "$1" "$FILE"
	feh --no-fehbg --bg-fill "$FILE"
}

restorewp() {
	feh --no-fehbg --bg-fill "$FILE" &
}

case "$1" in
	"set") setwp "$2" ;;
	"restore") restorewp ;;
	*) browse
esac

