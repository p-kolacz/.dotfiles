#! /bin/sh

#------------------------------------------------------------------------------#
								  # Monitors #
#------------------------------------------------------------------------------#

# bspc monitor -d I II III IV V VI VII VIII IX X
# bspc monitor -d        
xrandr_output=$(xrandr --current)
monitors_count=$(echo $xrandr_output | grep "\sconnected" | wc -l)
if [ $monitors_count -eq 1 ]; then
	main=$(echo $xrandr_output | grep "^eDP" | cut -d" " -f1)
else
	main=$(echo $xrandr_output | grep "^DP" | cut -d" " -f1)
	right=$(echo $xrandr_output | grep "^eDP" | cut -d" " -f1)
	bspc monitor $right --rename right
	left=$(echo $xrandr_output | grep "^HDMI" | cut -d" " -f1)
	bspc monitor $left --rename left
fi
bspc monitor $main --rename main

bspc monitor -d F W E R A S D G C V
bspc config remove_disabled_monitors true
bspc config remove_unplugged_monitors true

#------------------------------------------------------------------------------#
								 # Distances #
#------------------------------------------------------------------------------#

# bspc config bottom_padding		0
bspc config border_width		0
bspc config window_gap			16
bspc config split_ratio			0.52
bspc config borderless_monocle	true
bspc config gapless_monocle		true

#------------------------------------------------------------------------------#
								   # Mouse #
#------------------------------------------------------------------------------#

bspc config focus_follows_pointer true
bspc config pointer_follows_focus true

#------------------------------------------------------------------------------#
								   # Rules #
#------------------------------------------------------------------------------#

bspc rule -a Gimp desktop='^8' state=floating follow=on
bspc rule -a mpv state=floating
bspc rule -a Screenkey manage=off
# bspc rule -a Kupfer.py focus=on
# bspc rule -a Chromium desktop='^2'
