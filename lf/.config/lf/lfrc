#    __    _____
#   |  |  |   __|
#  |  |__|   __|
# |_____|__|
#
# https://godoc.org/github.com/gokcehan/lf

# TODO: archivemount 

set ifs "\n"
set previewer preview.sh

# Appearance
set color256
set info size
set icons
set timefmt ''
set tabstop 4
set sortby name
# %u username, %h hostname, %w workdir, %f filename
set promptfmt "\033[32;1m%u@%h\033[0m:\033[34;1m%w\033[0m"

# Behaviour
set findlen 2
set noanchorfind
set incsearch true
set scrolloff 3

###########
# Mappings
map u :unselect;clear
map i
map id %du -sh $f
map ii $$PAGER $f
map it %df -h --output=avail .
map x !$f
map <c-o> history-back
map <c-n> history-forward
map <c-z> $ kill -STOP $PPID
map . set hidden!
map <enter> shell

# Copy&paste
map d
map dd cut
map DD delete
map y
map yy copy
map yf yank-basename
map yd yank-dirname
map yp yank-path
map Pa link_abs
map Pr link_rel

# Dirs
map ,dn push :mkdir<space>
map ,dc push :mkdir-cd<space>
map ,ds push :mkdir-selection<space>

# Files
map ,fn push %touch<space>
map ,fe push %$EDITOR<space>
map ,fx chmodx

# Rename
map c
map A rename
map I push A<c-a>
map a push A<a-b><a-b><a-f>
map cc push A<c-u>
map cw push A<a-b><a-b><a-f><c-u>
map ce push A<a-b><c-k>
map R bulk-rename

# Tools
map ,
map ,b backup
map ,t tar
map ,z zip
map ,e extract
map ,c &meld $fx

# Goto
map g. cd ~/.dotfiles
map gl cd ~/.local
map gc cd ~/Cloud
map gd cd ~/Downloads
map gw cd ~/Work

# Select
map v
map vv :unselect; invert
map vi invert
map ve push :glob-select<space>*.
map vg push :glob-select<space>

# Trash
map tt %trash-put $fx
map tl $trash-list | sort | fzf
map tr $trash-restore 
map te trash-empty

# Tabs
map <a-1> tab-select 1
map <a-2> tab-select 2
map <a-3> tab-select 3
map <a-4> tab-select 4
map <tab> tab-next
# map <c-tab> tab-prev
map <c-w> tab-delete

source ~/.config/lf/commands

# vim: filetype=vim commentstring=#%s
