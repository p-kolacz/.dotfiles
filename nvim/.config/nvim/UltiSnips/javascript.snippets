function curtime()
{
	var
		date = new Date(),
		hours = date.getHours(),
		min = date.getMinutes(),
		sec = date.getSeconds()
	return (hours < 10 ? '0' + hours : hours) + ':' + (min < 10 ? '0' + min : min) + ':' + (sec < 10 ? '0' + sec : sec)
}
endsnippet

