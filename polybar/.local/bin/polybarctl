#!/bin/sh

restart() {
	stop
	for m in $(monitors list); do
		export MONITOR="$m"
		polybar --reload --log=warning main &
	done
}

stop() {
	killall --wait --quiet polybar
}

case $1 in
	restart) restart ;;
	reload)  pkill -USR1 -x polybar ;;
	stop)    stop ;;
	*)       echo "Usage: polybarctl [restart|reload|stop]"
esac

