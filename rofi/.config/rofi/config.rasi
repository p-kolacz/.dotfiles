// https://github.com/davatorium/rofi/blob/next/CONFIG.md

configuration {
	modi: "run,drun,calc,filebrowser";
	matching: "fuzzy";
	sorting-method: "fzf";

	font: "monospace 16";
	/* show-icons: true; */
	/* icon-theme: "Adwaita"; */

	kb-accept-entry: "Return";
	kb-remove-to-eol: "";
	kb-row-down: "ctrl-j,ctrl-n,Down";
	kb-row-up: "ctrl-k,ctrl-p,Up";
}
@theme "auto"

