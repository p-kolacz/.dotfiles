super + Return
	kitty

super + space
	dmenu_run -i -b -h 32 -p 'ïŒƒ '

super + Delete
	~/.dotfiles/dmenu/power.sh

super + {F1,F2,F3,F10}
	{icons.sh,emoji.sh,entities.sh,mnter.sh}

XF86Audio{Play,Prev,Next}
	playerctl {play-pause,previous,next}

XF86Audio{Raise,Lower}Volume
	fish -c {vol-inc,vol-dec}

XF86AudioMute
	fish -c mute-toggle

# Increase backlight
XF86MonBrightnessUp
	backlight.sh +5

# Decrease backlight
XF86MonBrightnessDown   
	backlight.sh -5

